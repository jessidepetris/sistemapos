{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": false,
    "types": ["node", "reflect-metadata"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "prisma/**/*.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}

